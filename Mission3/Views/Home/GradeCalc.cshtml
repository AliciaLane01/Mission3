@{
    ViewData["Title"] = "Grade Calculator";
}

<!--A "Grade Calculator" form that takes as input a percentage scored for each grade
category listed in the syllabus
-->

<h3>Grade Calculator</h3>
<p id="help_txt" hidden="hidden">Enter percentage scored for each grade category to calculate final grade.</p>
<form>
    <label>Assignments:</label>             <!--add padding to label in css-->
    <input id="assigns" type="number" />
    <br />
    <label>Group Project:</label>
    <input id="grp_proj" type="number" />
    <br />
    <label>Quizzes:</label>
    <input id="quizzes" type="number" />
    <br />
    <label>Exams:</label>
    <input id="exams" type="number" />
    <br />
    <label>INTEX:</label>
    <input id="intex" type="number" />
    <br />
    <input type="button" id="calculate" value="Calculate Final Grade" />
    <input type="button" id="help" value="?" />   <!--use to display the help txt (toggle)-->
</form>

<script src="js/functions.js"></script>
